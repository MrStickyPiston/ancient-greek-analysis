{
  "image": "mcr.microsoft.com/devcontainers/rust:latest",
  "mounts": [
    // Fix having to rebuild all dependencies every time
    {
      "source": "devcontainer-cargo-cache",
      "target": "/usr/local/cargo",
      "type": "volume"
    }
  ],
  "containerEnv": {
    "DATABASE_URL": "sqlite://db.sqlite?mode=rwc"
  }
}